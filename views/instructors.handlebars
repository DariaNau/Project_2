                                <label for="date">Date and Start Time</label>
                                <input type="datetime-local" class="form-control" required="required" id="datetime"
                                    name="date" placeholder="YYYY-MM-DD" value="2020-04-12T19:30" min="2020-03-17T00:00"
                                    max="2027-03-17T00:00" />
                            </div>
                        </form>
                        <!-- Duration input -->
                        <div class="form-group">
                            <label for="time">Class duration</label>
                            <input type="number" class="form-control" required="required" id="time" />
                        </div>
                        </form>
                        <div class="form-group">
                            <label for="capacity">Class capacity</label>
                            <input type="number" required="required" class="form-control" id="capacity-input"
                                placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="price">Price: $</label>
                            <input type="number" required="required" class="form-control" id="price-input">
                        </div>
                        <br />
                        <p>See all classes <a href="/instructors">here</a></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" form="c" class="btn btn-default">Add</button>
                    </div>
                </div>

            </div>
        </div>
